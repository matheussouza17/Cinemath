@model IEnumerable<Cinemath.Models.WishList>

@{
    ViewData["Title"] = "Index";
}

<h1>Wish List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.AgeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Gender)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            
        <tr>
              
            <td>
                      @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Year)
                </td>
                <td>
                    @if (item.Movie.AgeGroup == 0)
                    {
                        <text>Free</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Movie.AgeGroup)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Gender)
                </td>
            <td>
                    <a asp-area="" asp-controller="Movies" asp-action="Details" class="btn-detail btn" asp-route-id="@item.MovieId">Show Movie</a>
            </td>
            <td></td>
                
        </tr>
            
}
    </tbody>
</table>
