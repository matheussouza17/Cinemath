@model IEnumerable<Cinemath.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies List</h1>

<p class="text-right">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @if (item.AgeGroup == 0)
                    {
                        <text>Free</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.AgeGroup)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @*<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>*@
                    <a class="btn btn-primary btn-detail" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @*<a class="btn btn-primary btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>  *@              
                </td>
            </tr>
        }
    </tbody>
</table>
